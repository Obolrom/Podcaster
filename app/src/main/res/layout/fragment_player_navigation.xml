<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/player_background"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/close_player"
        android:layout_width="@dimen/clear_icon_size"
        android:layout_height="@dimen/clear_icon_size"
        android:layout_margin="@dimen/big_margin"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_clear"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/collapse_player"
        android:layout_width="@dimen/clear_icon_size"
        android:layout_height="@dimen/clear_icon_size"
        android:layout_margin="@dimen/big_margin"
        android:src="@drawable/ic_round_expand_more"
        android:contentDescription="@string/image_view_description"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageView
        android:id="@+id/chapters"
        android:layout_width="@dimen/clear_icon_size"
        android:layout_height="@dimen/clear_icon_size"
        android:layout_margin="@dimen/big_margin"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_format_list_bulleted"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.cardview.widget.CardView
        android:layout_width="280dp"
        android:layout_height="280dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="10dp"
        app:layout_constraintBottom_toTopOf="@+id/exo_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/audio_image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/pink_red"
            android:contentDescription="@string/image_view_description"
            android:scaleType="centerCrop" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/audio_track_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/normal_margin"
        android:textAppearance="@style/TextAppearance.AppCompat.Headline"
        app:layout_constraintBottom_toTopOf="@+id/exo_progress"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tools:text="Otherside" />

    <com.google.android.exoplayer2.ui.DefaultTimeBar
        android:id="@+id/exo_progress"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/big_margin"
        app:bar_height="4dp"
        app:buffered_color="@color/blue_magenta_10"
        app:scrubber_color="@color/blue_magenta_dark"
        app:played_color="@color/blue_magenta_dark"
        app:unplayed_color="@color/black_10"
        app:layout_constraintVertical_bias="0.7"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/exo_position"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/normal_margin"
        app:layout_constraintTop_toBottomOf="@+id/exo_progress"
        app:layout_constraintStart_toStartOf="@+id/exo_progress"
        tools:text="01:07" />

    <TextView
        android:id="@+id/exo_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/normal_margin"
        app:layout_constraintTop_toBottomOf="@+id/exo_progress"
        app:layout_constraintEnd_toEndOf="@+id/exo_progress"
        tools:text="04:15" />

    <ImageView
        android:id="@+id/exo_prev"
        android:layout_width="@dimen/exo_forward_rewind_icon_width"
        android:layout_height="@dimen/exo_forward_rewind_icon_width"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_skip_previous"
        app:tint="@color/blue_magenta_dark"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toBottomOf="@+id/exo_rewind"
        app:layout_constraintEnd_toStartOf="@+id/exo_rewind"
        app:layout_constraintTop_toTopOf="@+id/exo_rewind" />

    <ImageView
        android:id="@+id/exo_rewind"
        android:layout_width="@dimen/exo_forward_rewind_icon_width"
        android:layout_height="@dimen/exo_forward_rewind_icon_width"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_replay_30"
        app:tint="@color/blue_magenta_dark"
        app:layout_constraintBottom_toBottomOf="@+id/exo_play_pause"
        app:layout_constraintStart_toEndOf="@+id/exo_prev"
        app:layout_constraintEnd_toStartOf="@+id/exo_play_pause"
        app:layout_constraintTop_toTopOf="@+id/exo_play_pause" />

    <ImageView
        android:id="@+id/exo_play_pause"
        android:layout_width="@dimen/exo_play_pause_icon_width"
        android:layout_height="@dimen/exo_play_pause_icon_width"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_play_arrow"
        app:tint="@color/blue_magenta_dark"
        app:layout_constraintVertical_bias="0.6"
        app:layout_constraintBottom_toTopOf="@id/exo_playback_speed"
        app:layout_constraintStart_toEndOf="@+id/exo_rewind"
        app:layout_constraintEnd_toStartOf="@+id/exo_forward"
        app:layout_constraintTop_toBottomOf="@+id/exo_progress" />

    <ImageView
        android:id="@+id/exo_forward"
        android:layout_width="@dimen/exo_forward_rewind_icon_width"
        android:layout_height="@dimen/exo_forward_rewind_icon_width"
        android:layout_marginHorizontal="@dimen/small_margin"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_forward_30"
        app:tint="@color/blue_magenta_dark"
        app:layout_constraintEnd_toStartOf="@+id/exo_next"
        app:layout_constraintBottom_toBottomOf="@+id/exo_play_pause"
        app:layout_constraintStart_toEndOf="@+id/exo_play_pause"
        app:layout_constraintTop_toTopOf="@+id/exo_play_pause" />

    <ImageView
        android:id="@+id/exo_next"
        android:layout_width="@dimen/exo_forward_rewind_icon_width"
        android:layout_height="@dimen/exo_forward_rewind_icon_width"
        android:contentDescription="@string/image_view_description"
        android:src="@drawable/ic_round_skip_next"
        app:tint="@color/blue_magenta_dark"
        app:layout_constraintBottom_toBottomOf="@+id/exo_forward"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/exo_forward"
        app:layout_constraintTop_toTopOf="@+id/exo_forward" />

    <io.obolonsky.podcaster.ui.widgets.SpeedView
        android:id="@+id/exo_playback_speed"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_marginBottom="28dp"
        android:background="@drawable/round_background"
        app:speed_text="1.0x"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>